{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "src",
    "noEmitHelpers": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"]
  },
  "exclude": [
      "./dist",
      "./node_modules",
  ],
  "angularCompilerOptions": {
    "debug": false,
    "genDir": "./aot",
    "basePath": "./src/",
    "skipMetadataEmit" : false,
    "preserveWhitespaces": "off",
    "entryModule": "./src/app/app.module#AppModule"
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
